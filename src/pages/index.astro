---

<Layout title="Alan Christian">
  <main class="w-screen h-screen flex justify-center items-center">
    <div class="flex flex-col border-[0.5px] border-gray-300 shadow-2xl rounded-2xl w-1/3 p-10 gap-10">
      <h1>Payment Requests</h1>

      <div class="flex flex-col gap-8">
        <h4>Contact details</h4>

        <div class="flex flex-col gap-1">
          <label for="contacts">Send payments request to</label>

          <ContactDropDown 
            contacts={contacts} 
            client:load
            id="vue-contact"
          />
        </div>

        <div class="flex w-full gap-5">
          <div class="flex flex-col w-full gap-1">
            <label for="name">Your name</label>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Enter your full name"
              autocomplete="off"
            />
          </div>

          <div class="flex flex-col w-full gap-1">
            <label for="email">Your email</label>
            <input
              type="email"
              id="email"
              placeholder="Email@example.com"
              name="email"
              autocomplete="off"
            />
          </div>
        </div>
      </div>

      <div class="flex flex-row justify-between">
        <button id="cancel"> Cancel </button>

        <button id="request-payment"> Proceed to next step </button>
      </div>
    </div>
  </main>
</Layout>

